---
import Layout from "../layouts/Layout.astro";
import ContactSection from "../components/ContactSection.astro";
---

<Layout title="Cancérologie gynécologique à Tanger | Clinique Jbel Lakbir">
    <main class="cancero-page">
        <!-- Hero Section -->
        <section class="cancero-hero">
            <div class="cancero-hero__bg-glow cancero-hero__bg-glow--right">
            </div>
            <div class="cancero-hero__bg-glow cancero-hero__bg-glow--left">
            </div>

            <div class="cancero-hero__inner">
                <div class="cancero-hero__badge">
                    <span class="cancero-hero__badge-dot"></span>
                    Oncologie Féminine
                </div>

                <h1 class="cancero-hero__title">
                    Cancérologie <span class="cancero-hero__title-accent"
                        >Gynécologique</span
                    >
                </h1>

                <p class="cancero-hero__subtitle">
                    Service spécialisé dans la prévention, le diagnostic et le
                    traitement des cancers féminins, avec une approche
                    pluridisciplinaire et humaine.
                </p>

                <div class="cancero-hero__cta-wrap">
                    <a href="/contact" class="cancero-hero__cta">
                        <span>Prendre rendez-vous</span>
                        <svg
                            width="20"
                            height="20"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                        >
                    </a>
                </div>
            </div>
        </section>

        <!-- Main Content & Image -->
        <section class="cancero-about">
            <div class="cancero-about__inner">
                <div class="cancero-about__text">
                    <span class="cancero-about__label"
                        >Une Prise en Charge Globale</span
                    >

                    <h2 class="cancero-about__heading">
                        Prise en charge des cancers gynécologiques
                    </h2>

                    <div class="cancero-about__prose">
                        <p class="cancero-about__lead">
                            La Clinique Jbel Lakbir assure le <b
                                >diagnostic et le traitement</b
                            > des cancers gynécologiques (col de l'utérus, endomètre,
                            ovaires, vagin, vulve et sein).
                        </p>
                        <p>
                            Après les examens nécessaires (échographie,
                            colposcopie, biopsie, imagerie), un <b
                                >plan thérapeutique personnalisé</b
                            > est établi en collaboration avec des spécialistes (gynécologue,
                            oncologue, radiothérapeute).
                        </p>
                        <p>
                            L'objectif est de proposer la meilleure stratégie
                            possible — chirurgie, chimiothérapie ou
                            radiothérapie — tout en accompagnant la patiente
                            tout au long de son parcours de soins dans un
                            environnement rassurant.
                        </p>
                    </div>
                </div>

                <div class="cancero-about__image-wrap">
                    <div class="cancero-about__image-offset"></div>
                    <div class="cancero-about__image-frame">
                        <img
                            src="/Cancérologie.png"
                            alt="Service de Cancérologie à Tanger"
                            loading="lazy"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- Consultations Grid Section -->
        <section class="cancero-consult">
            <div class="cancero-consult__divider"></div>
            <div class="cancero-consult__inner">
                <div class="cancero-consult__header">
                    <h2 class="cancero-consult__title">
                        Notre approche thérapeutique
                    </h2>
                    <p class="cancero-consult__desc">
                        Un accompagnement humain associé aux meilleures
                        technologies et stratégies médicales actuelles.
                    </p>
                </div>

                <div class="cancero-consult__grid">
                    <!-- Diagnostic -->
                    <div class="cancero-card">
                        <div class="cancero-card__icon">
                            <!-- Shield/Search icon -->
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="cancero-card__title">
                            Dépistage & Diagnostic
                        </h3>
                        <div class="cancero-card__body">
                            <p>
                                Nous réalisons l'ensemble des examens
                                nécessaires (échographie, colposcopie, biopsie,
                                imagerie) pour établir un diagnostic <b
                                    >rapide et précis</b
                                > d'une lésion suspecte.
                            </p>
                        </div>
                    </div>

                    <!-- Chirurgie -->
                    <div class="cancero-card">
                        <div class="cancero-card__icon">
                            <!-- Scapel / Cross icon -->
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="cancero-card__title">
                            Chirurgie Oncologique
                        </h3>
                        <div class="cancero-card__body">
                            <p>
                                Nos chirurgiens sont spécialisés dans l'exérèse
                                des tumeurs gynécologiques, en privilégiant,
                                chaque fois que possible, des <b
                                    >techniques mini-invasives</b
                                > pour une récupération plus rapide.
                            </p>
                        </div>
                    </div>

                    <!-- RCP -->
                    <div class="cancero-card">
                        <div class="cancero-card__icon">
                            <!-- Team/Users icon -->
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="cancero-card__title">
                            Avis Pluridisciplinaire
                        </h3>
                        <div class="cancero-card__body">
                            <p>
                                Chaque dossier est discuté lors d'une <b
                                    >Réunion de Concertation Pluridisciplinaire
                                    (RCP)</b
                                > réunissant gynécologues, oncologues et radiothérapeutes
                                pour garantir la meilleure stratégie.
                            </p>
                        </div>
                    </div>

                    <!-- Medical Treatments -->
                    <div class="cancero-card">
                        <div class="cancero-card__icon">
                            <!-- Dropper/Meds icon -->
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="cancero-card__title">
                            Traitements Médicaux
                        </h3>
                        <div class="cancero-card__body">
                            <p>
                                Coordination des protocoles de <b
                                    >chimiothérapie, thérapies ciblées ou
                                    radiothérapie</b
                                >, adaptés spécifiquement à chaque type de
                                cancer et au profil de la patiente.
                            </p>
                        </div>
                    </div>

                    <!-- Personalized plan -->
                    <div class="cancero-card">
                        <div class="cancero-card__icon">
                            <!-- Note/List icon -->
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"
                                ></path></svg
                            >
                        </div>
                        <h3 class="cancero-card__title">
                            Plan Thérapeutique Personnalisé
                        </h3>
                        <div class="cancero-card__body">
                            <p>
                                Il n'y a pas un cancer, mais <b>votre</b> cancer.
                                Nous élaborons avec vous un parcours de soins clair,
                                qui répond exactement à votre pathologie et à vos
                                besoins spécifiques.
                            </p>
                        </div>
                    </div>

                    <!-- Soutien -->
                    <div class="cancero-card">
                        <div class="cancero-card__icon">
                            <!-- Heart / Medical icon -->
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="cancero-card__title">
                            Accompagnement & Soutien
                        </h3>
                        <div class="cancero-card__body">
                            <p>
                                L'aspect psychologique est fondamental dans la
                                guérison. Nos équipes se tiennent à vos côtés
                                pour vous apporter un <b
                                    >soutien continu, humain et rassurant</b
                                > à chaque étape.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Other Services Section -->
        <section class="cancero-services">
            <div class="cancero-services__pattern"></div>
            <div class="cancero-services__inner">
                <div class="cancero-services__header">
                    <h2 class="cancero-services__title">Nos autres services</h2>
                    <p class="cancero-services__desc">
                        Découvrez l'ensemble des spécialités proposées pour un
                        suivi complet.
                    </p>
                </div>

                <div class="cancero-services__grid">
                    <a href="/gynecologie" class="cancero-service-card">
                        <div class="cancero-service-card__body">
                            <div class="cancero-service-card__avatar">
                                <img
                                    src="/gynecologie-tanger.jpg"
                                    alt="Gynécologie"
                                />
                            </div>
                            <h3 class="cancero-service-card__name">
                                Gynécologie
                            </h3>
                            <p class="cancero-service-card__text">
                                Toutes les problématiques que peut rencontrer
                                une femme au cours de sa vie trouvent des
                                réponses auprès de nos spécialistes.
                            </p>
                        </div>
                        <div class="cancero-service-card__footer">
                            <span>Découvrir ce service</span>
                            <svg
                                width="20"
                                height="20"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                            >
                        </div>
                    </a>

                    <a href="/obstetrique" class="cancero-service-card">
                        <div class="cancero-service-card__body">
                            <div class="cancero-service-card__avatar">
                                <img
                                    src="/obstetrique-tanger.jpg"
                                    alt="Obstétrique"
                                />
                            </div>
                            <h3 class="cancero-service-card__name">
                                Obstétrique
                            </h3>
                            <p class="cancero-service-card__text">
                                Accompagnement complet tout au long de la
                                grossesse, de la conception à l'accouchement,
                                dans un cadre attentif et rassurant.
                            </p>
                        </div>
                        <div class="cancero-service-card__footer">
                            <span>Découvrir ce service</span>
                            <svg
                                width="20"
                                height="20"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                            >
                        </div>
                    </a>

                    <a href="/chirurgie" class="cancero-service-card">
                        <div class="cancero-service-card__body">
                            <div class="cancero-service-card__avatar">
                                <img src="/chirurgie-gynecologue-tanger.jpg" alt="Chirurgie" />
                            </div>
                            <h3 class="cancero-service-card__name">
                                Chirurgie
                            </h3>
                            <p class="cancero-service-card__text">
                                Un service dédié aux interventions chirurgicales
                                féminines, avec des techniques de pointe
                                modernes et sécurisées.
                            </p>
                        </div>
                        <div class="cancero-service-card__footer">
                            <span>Découvrir ce service</span>
                            <svg
                                width="20"
                                height="20"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                            >
                        </div>
                    </a>
                </div>
            </div>
        </section>

        <!-- Use standard Contact section matching the rest of the site -->
        <ContactSection />
    </main>
</Layout>

<style>
    /* ========================================
       CANCEROLOGIE PAGE — DESIGN TOKENS
       ======================================== */
    :root {
        --cancero-brand: #009b9f;
        --cancero-brand-dark: #007a7d;
        --cancero-dark: #0f1e2a;
        --cancero-dark-mid: #162d40;
        --cancero-dark-teal: #004e50;
        --cancero-gray-50: #f9fafb;
        --cancero-gray-100: #f3f4f6;
        --cancero-gray-200: #e5e7eb;
        --cancero-gray-500: #6b7280;
        --cancero-gray-600: #4b5563;
        --cancero-gray-800: #1f2937;
        --cancero-white: #ffffff;
        --cancero-teal-50: #f0fdfa;
        --cancero-teal-100: #ccfbf1;
        --cancero-teal-400: #2dd4bf;
        --cancero-font-main: "Poppins", sans-serif;
        --cancero-radius-sm: 8px;
        --cancero-radius-md: 16px;
        --cancero-radius-lg: 24px;
        --cancero-radius-xl: 40px;
        --cancero-radius-full: 9999px;
        --cancero-max-width: 1280px;
        --cancero-transition: 0.3s ease;
    }

    /* ========================================
       PAGE WRAPPER
       ======================================== */
    .cancero-page {
        display: flex;
        flex-direction: column;
        background-color: var(--cancero-gray-50);
        overflow: hidden;
        font-family: var(--cancero-font-main);
    }

    /* ========================================
       HERO SECTION
       ======================================== */
    .cancero-hero {
        position: relative;
        background: linear-gradient(
            135deg,
            var(--cancero-dark),
            var(--cancero-dark-mid),
            var(--cancero-dark-teal)
        );
        color: var(--cancero-white);
        padding: 128px 24px;
        text-align: center;
    }

    .cancero-hero__bg-glow {
        position: absolute;
        width: 50%;
        height: 50%;
        border-radius: 50%;
        filter: blur(120px);
        pointer-events: none;
    }
    .cancero-hero__bg-glow--right {
        top: -20%;
        right: -10%;
        background-color: var(--cancero-brand);
        opacity: 0.35;
    }
    .cancero-hero__bg-glow--left {
        bottom: -20%;
        left: -10%;
        background-color: var(--cancero-teal-400);
        opacity: 0.18;
    }

    .cancero-hero__inner {
        position: relative;
        z-index: 2;
        max-width: var(--cancero-max-width);
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 24px;
    }

    .cancero-hero__badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 18px;
        border-radius: var(--cancero-radius-full);
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: var(--cancero-teal-100);
        font-size: 14px;
        font-weight: 500;
        letter-spacing: 0.5px;
    }
    .cancero-hero__badge-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: var(--cancero-teal-400);
        animation: cancero-pulse 2s ease-in-out infinite;
    }
    @keyframes cancero-pulse {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.4;
        }
    }

    .cancero-hero__title {
        font-size: 56px;
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -1px;
        margin: 0;
        color: var(--cancero-white);
    }

    .cancero-hero__subtitle {
        font-size: 20px;
        color: #d1d5db;
        max-width: 700px;
        line-height: 1.6;
        font-weight: 300;
        margin: 0;
    }

    .cancero-hero__cta-wrap {
        padding-top: 16px;
    }
    .cancero-hero__cta {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 16px 40px;
        background: var(--cancero-white);
        color: var(--cancero-dark);
        font-weight: 700;
        font-size: 16px;
        border-radius: var(--cancero-radius-full);
        text-decoration: none;
        transition:
            transform var(--cancero-transition),
            box-shadow var(--cancero-transition);
        position: relative;
        overflow: hidden;
        font-family: var(--cancero-font-main);
    }
    .cancero-hero__cta:hover {
        transform: scale(1.05);
        box-shadow: 0 0 40px rgba(255, 255, 255, 0.3);
    }
    .cancero-hero__cta svg {
        transition: transform var(--cancero-transition);
    }
    .cancero-hero__cta:hover svg {
        transform: translateX(4px);
    }

    /* ========================================
       ABOUT SECTION
       ======================================== */
    .cancero-about {
        padding: 96px 24px;
    }
    .cancero-about__inner {
        max-width: var(--cancero-max-width);
        margin: 0 auto;
        display: flex;
        gap: 64px;
        align-items: center;
    }
    .cancero-about__text {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 24px;
    }
    .cancero-about__label {
        display: inline-block;
        padding: 8px 18px;
        background-color: var(--cancero-teal-50);
        color: var(--cancero-brand);
        font-weight: 600;
        border-radius: var(--cancero-radius-full);
        font-size: 13px;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        width: fit-content;
    }
    .cancero-about__heading {
        font-size: 40px;
        font-weight: 700;
        color: var(--cancero-dark);
        line-height: 1.2;
        margin: 0;
    }
    .cancero-about__prose {
        display: flex;
        flex-direction: column;
        gap: 16px;
        color: var(--cancero-gray-600);
        font-size: 16px;
        line-height: 1.75;
        font-weight: 300;
    }
    .cancero-about__prose p {
        margin: 0;
    }
    .cancero-about__lead {
        font-size: 18px;
        color: var(--cancero-gray-800);
        font-weight: 500;
    }
    .cancero-about__prose a {
        color: var(--cancero-brand);
        text-decoration: none;
        font-weight: 600;
        transition: color var(--cancero-transition);
    }
    .cancero-about__prose a:hover {
        color: var(--cancero-brand-dark);
    }
    .cancero-about__prose b {
        color: var(--cancero-dark);
        font-weight: 600;
    }

    .cancero-about__image-wrap {
        flex: 1;
        position: relative;
    }
    .cancero-about__image-offset {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            var(--cancero-brand),
            var(--cancero-teal-400)
        );
        border-radius: var(--cancero-radius-xl);
        transform: translate(24px, 24px);
    }
    .cancero-about__image-frame {
        position: relative;
        z-index: 2;
        border-radius: var(--cancero-radius-xl);
        overflow: hidden;
        border: 8px solid var(--cancero-white);
        background: var(--cancero-white);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
    }
    .cancero-about__image-frame img {
        display: block;
        width: 100%;
        height: auto;
        object-fit: cover;
        transition: transform 0.8s ease;
    }
    .cancero-about__image-frame:hover img {
        transform: scale(1.05);
    }

    /* ========================================
       CONSULTATIONS SECTION
       ======================================== */
    .cancero-consult {
        position: relative;
        background-color: var(--cancero-white);
        padding: 96px 24px;
    }
    .cancero-consult__divider {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--cancero-gray-200),
            transparent
        );
