---
import Layout from "../layouts/Layout.astro";
import ContactSection from "../components/ContactSection.astro";
---

<Layout title="Chirurgie gynécologique à Tanger | Clinique Jbel Lakbir">
    <main class="chir-page">
        <!-- Hero Section -->
        <section class="chir-hero">
            <div class="chir-hero__bg-glow chir-hero__bg-glow--right"></div>
            <div class="chir-hero__bg-glow chir-hero__bg-glow--left"></div>

            <div class="chir-hero__inner">
                <div class="chir-hero__badge">
                    <span class="chir-hero__badge-dot"></span>
                    Chirurgie Avancée
                </div>

                <h1 class="chir-hero__title">
                    Chirurgie <span class="chir-hero__title-accent"
                        >Gynécologique</span
                    > à Tanger
                </h1>

                <p class="chir-hero__subtitle">
                    Des interventions chirurgicales sécurisées, à la pointe de
                    la technologie, pour la santé et le bien-être de la femme.
                </p>

                <div class="chir-hero__cta-wrap">
                    <a href="/contact" class="chir-hero__cta">
                        <span>Prendre rendez-vous</span>
                        <svg
                            width="20"
                            height="20"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                        >
                    </a>
                </div>
            </div>
        </section>

        <!-- Main Content & Image -->
        <section class="chir-about">
            <div class="chir-about__inner">
                <div class="chir-about__text">
                    <span class="chir-about__label"
                        >Technologie & Précision</span
                    >

                    <h2 class="chir-about__heading">
                        Service de chirurgie gynécologique
                    </h2>

                    <div class="chir-about__prose">
                        <p class="chir-about__lead">
                            Le service de chirurgie gynécologique de la Clinique
                            Jbel Lakbir prend en charge l'ensemble des
                            pathologies de l'appareil génital féminin
                            nécessitant une <b>intervention chirurgicale</b>.
                        </p>
                        <p>
                            Notre équipe de spécialistes assure le diagnostic,
                            le suivi préopératoire et la prise en charge
                            complète des patientes, dans un environnement
                            moderne et sécurisé.
                        </p>
                        <p>
                            Grâce aux techniques de <b
                                >chirurgie mini-invasive</b
                            > (coelioscopie, hystéroscopie), nous privilégions des
                            interventions précises, avec une récupération plus rapide,
                            moins de douleur postopératoire et une hospitalisation
                            réduite.
                        </p>
                    </div>
                </div>

                <div class="chir-about__image-wrap">
                    <div class="chir-about__image-offset"></div>
                    <div class="chir-about__image-frame">
                        <img
                            src="/Chirurgie.png"
                            alt="Chirurgie Gynécologique à Tanger"
                            loading="lazy"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- Consultations Grid Section -->
        <section class="chir-consult">
            <div class="chir-consult__divider"></div>
            <div class="chir-consult__inner">
                <div class="chir-consult__header">
                    <h2 class="chir-consult__title">
                        Nos principales interventions
                    </h2>
                    <p class="chir-consult__desc">
                        Un suivi personnalisé et humain assuré par nos
                        chirurgiens expérimentés.
                    </p>
                </div>

                <div class="chir-consult__grid">
                    <!-- Kystes -->
                    <div class="chir-card">
                        <div class="chir-card__icon">
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="chir-card__title">Kystes Ovariens</h3>
                        <div class="chir-card__body">
                            <p>
                                Prise en charge chirurgicale des kystes de
                                l'ovaire <b>bénins et malins</b>, avec une
                                approche conservatrice privilégiée pour
                                préserver la fertilité.
                            </p>
                        </div>
                    </div>

                    <!-- Fibromes -->
                    <div class="chir-card">
                        <div class="chir-card__icon">
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="chir-card__title">Fibromes Utérins</h3>
                        <div class="chir-card__body">
                            <p>
                                Exérèse de fibromes utérins responsables de
                                douleurs, saignements abondants ou difficultés à
                                concevoir, en favorisant les techniques <b
                                    >mini-invasives</b
                                > comme l'hystéroscopie.
                            </p>
                        </div>
                    </div>

                    <!-- Endométriose -->
                    <div class="chir-card">
                        <div class="chir-card__icon">
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="chir-card__title">Endométriose</h3>
                        <div class="chir-card__body">
                            <p>
                                Traitement chirurgical des lésions
                                d'endométriose, pour soulager les <b
                                    >douleurs pelviennes</b
                                > chroniques et améliorer la qualité de vie des patientes.
                            </p>
                        </div>
                    </div>

                    <!-- Prolapsus -->
                    <div class="chir-card">
                        <div class="chir-card__icon">
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
                            >
                        </div>
                        <h3 class="chir-card__title">Prolapsus Génital</h3>
                        <div class="chir-card__body">
                            <p>
                                Interventions réparatrices pour traiter les <b
                                    >descentes d'organes</b
                                > (vessie, utérus, rectum), en restaurant l'anatomie
                                normale et la fonctionnalité pelvienne.
                            </p>
                        </div>
                    </div>

                    <!-- Col Uterus -->
                    <div class="chir-card">
                        <div class="chir-card__icon">
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="chir-card__title">Anomalies du Col</h3>
                        <div class="chir-card__body">
                            <p>
                                Prise en charge des lésions pré-cancéreuses ou
                                suspectes du <b>col de l'utérus</b> par des interventions
                                comme la conisation.
                            </p>
                        </div>
                    </div>

                    <!-- Suivi -->
                    <div class="chir-card">
                        <div class="chir-card__icon">
                            <svg
                                width="32"
                                height="32"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                xmlns="http://www.w3.org/2000/svg"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                ></path></svg
                            >
                        </div>
                        <h3 class="chir-card__title">Suivi Personnalisé</h3>
                        <div class="chir-card__body">
                            <p>
                                Chaque patiente bénéficie d'une consultation
                                pré-intervention exhaustive et d'un <b
                                    >suivi post-opératoire rigoureux</b
                                > pour un rétablissement en toute quiétude.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Other Services Section -->
        <section class="chir-services">
            <div class="chir-services__pattern"></div>
            <div class="chir-services__inner">
                <div class="chir-services__header">
                    <h2 class="chir-services__title">Nos autres services</h2>
                    <p class="chir-services__desc">
                        Découvrez l'ensemble des spécialités proposées pour un
                        suivi complet.
                    </p>
                </div>

                <div class="chir-services__grid">
                    <a href="/gynecologie" class="chir-service-card">
                        <div class="chir-service-card__body">
                            <div class="chir-service-card__avatar">
                                <img
                                    src="/gynecologie-tanger.jpg"
                                    alt="Gynécologie"
                                />
                            </div>
                            <h3 class="chir-service-card__name">Gynécologie</h3>
                            <p class="chir-service-card__text">
                                Toutes les problématiques que peut rencontrer
                                une femme au cours de sa vie trouvent des
                                réponses auprès de nos spécialistes.
                            </p>
                        </div>
                        <div class="chir-service-card__footer">
                            <span>Découvrir ce service</span>
                            <svg
                                width="20"
                                height="20"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                            >
                        </div>
                    </a>

                    <a href="/obstetrique" class="chir-service-card">
                        <div class="chir-service-card__body">
                            <div class="chir-service-card__avatar">
                                <img
                                    src="/obstetrique-tanger.jpg"
                                    alt="Obstétrique"
                                />
                            </div>
                            <h3 class="chir-service-card__name">Obstétrique</h3>
                            <p class="chir-service-card__text">
                                Accompagnement complet tout au long de la
                                grossesse, de la conception à l'accouchement,
                                dans un cadre attentif et rassurant.
                            </p>
                        </div>
                        <div class="chir-service-card__footer">
                            <span>Découvrir ce service</span>
                            <svg
                                width="20"
                                height="20"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                            >
                        </div>
                    </a>

                    <a href="/cancerologie" class="chir-service-card">
                        <div class="chir-service-card__body">
                            <div class="chir-service-card__avatar">
                                <img
                                    src="/cancerologie-tanger.jpg"
                                    alt="Cancérologie"
                                />
                            </div>
                            <h3 class="chir-service-card__name">
                                Cancérologie
                            </h3>
                            <p class="chir-service-card__text">
                                Service spécialisé dans la prévention, le
                                diagnostic et le traitement des cancers
                                féminins, avec une prise en charge
                                pluridisciplinaire.
                            </p>
                        </div>
                        <div class="chir-service-card__footer">
                            <span>Découvrir ce service</span>
                            <svg
                                width="20"
                                height="20"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                            >
                        </div>
                    </a>
                </div>
            </div>
        </section>

        <!-- Standard Contact Section -->
        <ContactSection />
    </main>
</Layout>

<style>
    /* ========================================
       CHIRURGIE PAGE — DESIGN TOKENS
       ======================================== */
    :root {
        --chir-brand: #009b9f;
        --chir-brand-dark: #007a7d;
        --chir-dark: #0f1e2a;
        --chir-dark-mid: #162d40;
        --chir-dark-teal: #004e50;
        --chir-gray-50: #f9fafb;
        --chir-gray-100: #f3f4f6;
        --chir-gray-200: #e5e7eb;
        --chir-gray-500: #6b7280;
        --chir-gray-600: #4b5563;
        --chir-gray-800: #1f2937;
        --chir-white: #ffffff;
        --chir-teal-50: #f0fdfa;
        --chir-teal-100: #ccfbf1;
        --chir-teal-400: #2dd4bf;
        --chir-font-main: "Poppins", sans-serif;
        --chir-radius-sm: 8px;
        --chir-radius-md: 16px;
        --chir-radius-lg: 24px;
        --chir-radius-xl: 40px;
        --chir-radius-full: 9999px;
        --chir-max-width: 1280px;
        --chir-transition: 0.3s ease;
    }

    /* ========================================
       PAGE WRAPPER
       ======================================== */
    .chir-page {
        display: flex;
        flex-direction: column;
        background-color: var(--chir-gray-50);
        overflow: hidden;
        font-family: var(--chir-font-main);
    }

    /* ========================================
       HERO SECTION
       ======================================== */
    .chir-hero {
        position: relative;
        background: linear-gradient(
            135deg,
            var(--chir-dark),
            var(--chir-dark-mid),
            var(--chir-dark-teal)
        );
        color: var(--chir-white);
        padding: 128px 24px;
        text-align: center;
    }

    .chir-hero__bg-glow {
        position: absolute;
        width: 50%;
        height: 50%;
        border-radius: 50%;
        filter: blur(120px);
        pointer-events: none;
    }
    .chir-hero__bg-glow--right {
        top: -20%;
        right: -10%;
        background-color: var(--chir-brand);
        opacity: 0.35;
    }
    .chir-hero__bg-glow--left {
        bottom: -20%;
        left: -10%;
        background-color: var(--chir-teal-400);
        opacity: 0.18;
    }

    .chir-hero__inner {
        position: relative;
        z-index: 2;
        max-width: var(--chir-max-width);
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 24px;
    }

    .chir-hero__badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 18px;
        border-radius: var(--chir-radius-full);
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: var(--chir-teal-100);
        font-size: 14px;
        font-weight: 500;
        letter-spacing: 0.5px;
    }
    .chir-hero__badge-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background-color: var(--chir-teal-400);
        animation: chir-pulse 2s ease-in-out infinite;
    }
    @keyframes chir-pulse {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.4;
        }
    }

    .chir-hero__title {
        font-size: 56px;
        font-weight: 800;
        line-height: 1.1;
        letter-spacing: -1px;
        margin: 0;
        color: var(--chir-white);
    }

    .chir-hero__subtitle {
        font-size: 20px;
        color: #d1d5db;
        max-width: 700px;
        line-height: 1.6;
        font-weight: 300;
        margin: 0;
    }

    .chir-hero__cta-wrap {
        padding-top: 16px;
    }
    .chir-hero__cta {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 16px 40px;
        background: var(--chir-white);
        color: var(--chir-dark);
        font-weight: 700;
        font-size: 16px;
        border-radius: var(--chir-radius-full);
        text-decoration: none;
        transition:
            transform var(--chir-transition),
            box-shadow var(--chir-transition);
        position: relative;
        overflow: hidden;
        font-family: var(--chir-font-main);
    }
    .chir-hero__cta:hover {
        transform: scale(1.05);
        box-shadow: 0 0 40px rgba(255, 255, 255, 0.3);
    }
    .chir-hero__cta svg {
        transition: transform var(--chir-transition);
    }
    .chir-hero__cta:hover svg {
        transform: translateX(4px);
    }

    /* ========================================
       ABOUT SECTION
       ======================================== */
    .chir-about {
        padding: 96px 24px;
    }
    .chir-about__inner {
        max-width: var(--chir-max-width);
        margin: 0 auto;
        display: flex;
        gap: 64px;
        align-items: center;
    }
    .chir-about__text {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 24px;
    }
    .chir-about__label {
        display: inline-block;
        padding: 8px 18px;
        background-color: var(--chir-teal-50);
        color: var(--chir-brand);
        font-weight: 600;
        border-radius: var(--chir-radius-full);
        font-size: 13px;
        letter-spacing: 1.5px;
        text-transform: uppercase;
        width: fit-content;
    }
    .chir-about__heading {
        font-size: 40px;
        font-weight: 700;
        color: var(--chir-dark);
        line-height: 1.2;
        margin: 0;
    }
    .chir-about__prose {
        display: flex;
        flex-direction: column;
        gap: 16px;
        color: var(--chir-gray-600);
        font-size: 16px;
        line-height: 1.75;
        font-weight: 300;
    }
    .chir-about__prose p {
        margin: 0;
    }
    .chir-about__lead {
        font-size: 18px;
        color: var(--chir-gray-800);
        font-weight: 500;
    }
    .chir-about__prose a {
        color: var(--chir-brand);
        text-decoration: none;
        font-weight: 600;
        transition: color var(--chir-transition);
    }
    .chir-about__prose a:hover {
        color: var(--chir-brand-dark);
    }
    .chir-about__prose b {
        color: var(--chir-dark);
        font-weight: 600;
    }

    .chir-about__image-wrap {
        flex: 1;
        position: relative;
    }
    .chir-about__image-offset {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            var(--chir-brand),
            var(--chir-teal-400)
        );
        border-radius: var(--chir-radius-xl);
        transform: translate(24px, 24px);
    }
    .chir-about__image-frame {
        position: relative;
        z-index: 2;
        border-radius: var(--chir-radius-xl);
        overflow: hidden;
        border: 8px solid var(--chir-white);
        background: var(--chir-white);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.12);
    }
    .chir-about__image-frame img {
        display: block;
        width: 100%;
        height: auto;
        object-fit: cover;
        transition: transform 0.8s ease;
    }
    .chir-about__image-frame:hover img {
        transform: scale(1.05);
    }

    /* ========================================
       CONSULTATIONS GRID SECTION
       ======================================== */
    .chir-consult {
        position: relative;
        background-color: var(--chir-white);
        padding: 96px 24px;
    }
    .chir-consult__divider {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--chir-gray-200),
            transparent
        );
    }
    .chir-consult__inner {
        max-width: var(--chir-max-width);
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 64px;
    }
    .chir-consult__header {
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
    .chir-consult__title {
        font-size: 44px;
        font-weight: 800;
        color: var(--chir-dark);
        margin: 0;
    }
    .chir-consult__desc {
        font-size: 18px;
        color: var(--chir-gray-500);
        max-width: 600px;
        margin: 0 auto;
        font-weight: 300;
    }

    .chir-consult__grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 32px;
    }

    .chir-card {
        background: var(--chir-white);
        padding: 40px;
        border-radius: var(--chir-radius-lg);
        border: 1px solid var(--chir-gray-100);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.04);
        transition:
